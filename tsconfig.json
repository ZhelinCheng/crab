{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./server/core",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/core/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/server",
    "tasks"
  ],
  "include": [
    "src/core/**/*"
  ]
}
